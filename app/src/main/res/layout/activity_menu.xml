<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="main.menu.MenuActivity"
        android:background="@drawable/pixel_background">

    <ImageView
            android:layout_width="321dp"
            android:layout_height="138dp" app:srcCompat="@drawable/logo"
            android:id="@+id/logo" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playBt"
            app:layout_constraintStart_toStartOf="@+id/logo" app:layout_constraintEnd_toEndOf="@+id/logo"
            android:layout_marginTop="68dp" app:layout_constraintTop_toBottomOf="@+id/logo"
            app:layout_constraintHorizontal_bias="0.497"/>
    <Button
            android:text="@string/ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rankingBt" app:layout_constraintStart_toStartOf="@+id/playBt"
            app:layout_constraintEnd_toEndOf="@+id/playBt" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/playBt" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aboutBt" app:layout_constraintStart_toStartOf="@+id/rankingBt"
            app:layout_constraintEnd_toEndOf="@+id/rankingBt" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/rankingBt" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exitBt" app:layout_constraintStart_toStartOf="@+id/aboutBt"
            app:layout_constraintEnd_toEndOf="@+id/aboutBt" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/aboutBt" app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>